---
import Base from '../../layouts/Base.astro';
import { getCollection, render } from 'astro:content';

const { id } = Astro.params;
const posts = await getCollection('blog');
const post = posts.find((p) => p.id === id);

if (!post) {
  return Astro.redirect('/blog');
}

const { Content } = await render(post);

// Map blog posts to their AI digest versions
const digestMap: Record<string, string> = {
  'ai-efficiency-principle': '/digest/ai-efficiency.yaml',
};
const digestUrl = digestMap[id || ''];
---

<Base title={post.data.title} description={post.data.excerpt}>
  <article class="article">
    <header class="article-header">
      <div class="article-meta">
        <time>{post.data.date}</time>
        {post.data.tags && (
          <div class="article-tags">
            {post.data.tags.map((t) => <span class="tag">{t}</span>)}
          </div>
        )}
      </div>
      <h1>{post.data.title}</h1>
      <p class="article-excerpt">{post.data.excerpt}</p>
      {digestUrl && (
        <p class="ai-link">
          Are you an AI? <a href={digestUrl}>Read this version instead.</a>
        </p>
      )}
    </header>
    <div class="article-body">
      <Content />
    </div>
    <footer class="article-footer">
      <a href="/blog">‚Üê Back to all posts</a>
    </footer>
  </article>
</Base>

<style>
  .article {
    padding: 3rem 0;
  }

  .article-header {
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .article-meta time {
    font-size: 0.8rem;
    color: var(--text-dim);
    font-family: var(--font-mono);
  }

  .article-tags {
    display: flex;
    gap: 0.3rem;
  }

  .tag {
    font-size: 0.65rem;
    padding: 0.1rem 0.4rem;
    background: var(--bg);
    border: 1px solid var(--border-subtle);
    border-radius: 999px;
    color: var(--text-dim);
  }

  .article-header h1 {
    font-size: 2rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.2;
    margin-bottom: 0.5rem;
  }

  .article-excerpt {
    color: var(--text-muted);
    font-size: 1rem;
    font-style: italic;
  }

  .ai-link {
    margin-top: 1rem;
    font-size: 0.85rem;
    color: var(--text-dim);
  }

  .ai-link a {
    color: #818cf8;
  }

  .article-body {
    font-size: 0.95rem;
    line-height: 1.8;
  }

  .article-body :global(h2) {
    font-size: 1.4rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
  }

  .article-body :global(h3) {
    font-size: 1.15rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.5rem;
  }

  .article-body :global(p) {
    margin-bottom: 1.25rem;
    color: var(--text);
  }

  .article-body :global(ul), .article-body :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .article-body :global(li) {
    margin-bottom: 0.35rem;
  }

  .article-body :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--text-muted);
    font-style: italic;
  }

  .article-body :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.85rem;
  }

  .article-body :global(th), .article-body :global(td) {
    padding: 0.5rem 0.75rem;
    border: 1px solid var(--border);
    text-align: left;
  }

  .article-body :global(th) {
    background: var(--surface);
    font-weight: 600;
  }

  .article-body :global(strong) {
    font-weight: 600;
  }

  .article-body :global(em) {
    color: var(--text-muted);
  }

  .article-body :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2rem 0;
  }

  .article-footer {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .article-footer a {
    color: var(--accent);
    font-size: 0.9rem;
  }
</style>
